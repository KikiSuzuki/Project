/* pages/login/login.wxss */

view{
  position: relative;
  margin-top: 35%;
} 

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: -75rpx;
  border-radius: 50%;
}
.avatar_container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
a{
  display: flex;
  flex-direction: column;
  align-items: center;
}

input[type="text"]{
  background: rgb(255, 255, 255,0.7);
  display: inline-flex;
  margin-left: 20%;
  width: 65%;
  text-align: left;
  padding-left: 1rem;
  box-sizing: border-box;
  border-radius: 10px;
  margin-top: 1.5rem;
  margin-bottom: -0.5rem;
  height: 2rem;
  color:#7BA7AB;
}

text{
  display: inline-flex;
  width: 20%;
  margin-left: 5%;
  text-align: center;
  margin-top: 1rem;
}
.button_cont{
  display:inline-flex;
  align-items: center;
  margin: 5%;
  width: 40%;
}

button{
  height: 2rem;
  color: white;
  background: none;
}

