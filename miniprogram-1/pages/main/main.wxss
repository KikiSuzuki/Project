  display: flex;
  align-items: center;
  width: 170px;
  height: 170px;
  color: white;
  background-color: #A3D0C3;
  border: 2px solid #324b4e;
  margin-left: 25%;
  margin-top: 20%;
  border-radius: 85px;
}

