/* pages/main/main.wxss */
page{
  color: white
}
#indicators{
  display: flex;
  align-items: center;
  justify-content: center;
}
#indicator_red{
  display: inline-flex;
  background-color: red;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-left: 0.5rem;
}
#indicator_yellow{
  display: inline-flex;
  background-color: yellow;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-left: 0.5rem;
}
#indicator_green{
  display: inline-flex;
  background-color: green;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-left: 0.5rem;
}

#indicator_red.activ{
  box-shadow: 0 0 5px 3px #fff;
}
#indicator_red.nonactiv{
  box-shadow: 0 0 0 0;
}
#indicator_yellow.activ{
  box-shadow: 0 0 5px 3px #fff;
}
#indicator_yellow.nonactiv{
  box-shadow: 0 0 0 0;
}
#indicator_green.activ{
  box-shadow: 0 0 5px 3px #fff;
}
#indicator_green.nonactiv{
  box-shadow: 0 0 0 0;
}


